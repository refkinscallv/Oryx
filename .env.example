# ============================================
# APPLICATION
# ============================================
APP_ENV=development
APP_PORT=3001
APP_URL=http://localhost
APP_NAME=Oryx

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_DIALECT=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=
DB_NAME=
DB_LOGGING=false
DB_CHARSET=utf8mb4_general_ci

# ============================================
# DATABASE ADVANCED CONFIGURATION
# ============================================
DB_SYNC=true
DB_SEED=false
DB_ENTITY_DEV=src/app/database/entities/
DB_ENTITY_PROD=dist/app/database/entities/

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET_KEY=
JWT_EXPIRE_IN=86400 # Expiration time in seconds (24 hours)

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_STATUS=off
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=oryx:
REDIS_TLS=false
REDIS_RETRY_DELAY=2000
